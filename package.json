{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "name": "stack",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/zimekk/stack",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "concurrently": "4.0.1",
    "eslint": "5.9.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-config-react-app": "3.0.5",
    "eslint-plugin-flowtype": "3.2.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "flow-bin": "0.86.0",
    "graphql": "14.0.2",
    "graphql-request": "1.8.2",
    "graphql-tag": "2.10.0",
    "graphql-tag.macro": "2.0.0",
    "graphql-tools": "4.0.3",
    "husky": "1.1.3",
    "lerna": "^3.4.3",
    "lint-staged": "8.0.4",
    "prettier": "1.15.2",
    "prettier-eslint": "8.8.2"
  },
  "prettier": {},
  "eslintConfig": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "flowtype",
      "prettier"
    ],
    "parser": "babel-eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "globOptions": {
      "matchBase": false
    },
    "linters": {
      "**/*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "**/*.{json,css,md}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "start": "concurrently --kill-others-on-fail \"yarn start:api\" \"yarn start:web\"",
    "start:api": "lerna run --scope @stack/api start --stream",
    "start:app": "lerna run --scope @stack/app start --stream",
    "start:web": "lerna run --scope @stack/web start --stream",
    "precommit": "lint-staged",
    "lint": "eslint packages",
    "test": "CI=true lerna run test",
    "deploy": "lerna run --scope @stack/web deploy --stream",
    "clean": "lerna clean",
    "update": "yarn upgrade-interactive --latest"
  }
}
